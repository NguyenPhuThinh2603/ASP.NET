@model nguyenphuthinh_2122110426.Models.HomeModel


<div class="container">
    <!-- ========================= SECTION MAIN  ========================= -->
    <section class="section-main padding-y">
        <main class="card">
            <div class="card-body">

                <div class="row">
                    <aside class="col-lg col-md-3 flex-lg-grow-0">
                        <h6>Danh mục</h6>
                        <nav class="nav-home-aside">
                            <ul class="menu-category">
                                @foreach (var category in Model.ListCategory)
                                {
                                    <li>
                                        <a href="@Url.Action("ProductCategory", "Category", new { id = category.Id })">@category.Name</a>
                                    </li>
                                }

                            </ul>
                        </nav>
                    </aside> <!-- col.// -->
                    <div class="col-md-9 col-xl-7 col-lg-7">

                        <!-- ================== COMPONENT SLIDER  BOOTSTRAP  ==================  -->
                        <div id="carousel1_indicator" class="slider-home-banner carousel slide" data-ride="carousel">
                            <ol class="carousel-indicators">
                                <li data-target="#carousel1_indicator" data-slide-to="0" class="active"></li>
                                <li data-target="#carousel1_indicator" data-slide-to="1"></li>
                                <li data-target="#carousel1_indicator" data-slide-to="2"></li>
                            </ol>
                            <div class="carousel-inner">
                                <div class="carousel-item active">
                                    <img src="~/Content/images/banners/sile1.jpg" alt="First slide">
                                </div>
                                <div class="carousel-item">
                                    <img src="~/Content/images/banners/sile2.jpg" alt="Second slide">
                                </div>
                                <div class="carousel-item">
                                    <img src="~/Content/images/banners/sile3.jpg" alt="Third slide">
                                </div>
                            </div>
                            <a class="carousel-control-prev" href="#carousel1_indicator" role="button" data-slide="prev">
                                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                <span class="sr-only">Previous</span>
                            </a>
                            <a class="carousel-control-next" href="#carousel1_indicator" role="button" data-slide="next">
                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                <span class="sr-only">Next</span>
                            </a>
                        </div>
                        <!-- ==================  COMPONENT SLIDER BOOTSTRAP end.// ==================  .// -->

                    </div> <!-- col.// -->
                    <div class="col-md d-none d-lg-block flex-grow-1">
                        <aside class="special-home-right">
                            <h6 class="bg-blue text-center text-white mb-0 p-2">Danh mục phổ biến</h6>
                            @foreach (var category in Model.ListCategory.Where(n => n.ShowOnHomePage == true).Take(3))
                            {
                                <div class="card-banner border-bottom">
                                    <div class="py-3" style="width:80%">
                                        <h6 class="card-title">@category.Name</h6>
                                        <a href="@Url.Action("ProductCategory", "Category", new { id = category.Id })" class="btn btn-secondary btn-sm">Xem ngay</a>
                                    </div>
                                    <img src="~/Content/images/items/@category.Avatar" height="80" class="img-bg">
                                </div>
                            }
                        </aside>
                    </div> <!-- col.// -->
                </div> <!-- row.// -->

            </div> <!-- card-body.// -->
        </main> <!-- card.// -->

    </section>
    <!-- ========================= SECTION MAIN END// ========================= -->
    <!-- =============== SECTION DEAL =============== -->
    <section class="padding-bottom">
        <div class="card card-deal">
            <div class="col-heading content-body">
                <header class="section-heading">
                    <h3 class="section-title">Giảm giá sốc</h3>
                    <p>Hygiene equipments</p>
                </header><!-- sect-heading -->
                <div class="timer">
                    <div> <span class="num">04</span> <small>Ngày</small></div>
                    <div> <span class="num">12</span> <small>Giờ</small></div>
                    <div> <span class="num">58</span> <small>Phút</small></div>
                    <div> <span class="num">02</span> <small>Giây</small></div>
                </div>

            </div> <!-- col.// -->
            <div class="row no-gutters items-wrap">
                @foreach (var product in Model.ListProduct.Where(n => n.TypeId == 1).Take(3))
                {
                    <div class="col-md col-6">
                        <figure class="card-product-grid card-sm">
                            <a href="@Url.Action("ProductDetail","Products", new { Id= product.Id})" class="img-wrap">
                                <img src="~/Content/images/items/@product.Avatar" alt="@product.Name">
                            </a>
                            <div class="text-wrap p-3">
                                <!--<a href="#" class="title">product.Name</a>-->
                                @Html.ActionLink(product.Name, "ProductDetail", "Products", new { Id = product.Id }, null)
                                <span class="badge badge-danger"> -20% </span>
                            </div>
                        </figure>
                    </div> <!-- col.// -->
                }
            </div>
        </div>

    </section>
    <!-- =============== SECTION DEAL // END =============== -->
    <!-- =============== SECTION 1 =============== -->
    <section class="padding-bottom">
        <header class="section-heading heading-line">
            <h4 class="title-section text-uppercase">Áo hoodie</h4>
        </header>

        <div class="card card-home-category">
            <div class="row no-gutters">
                <div class="col-md-3">

                    @foreach (var item in Model.ListCategory.Where(p => p.Id == 1))
                    {
                        <div class="home-category-banner bg-light-orange" style="max-width: 100%; padding: 10px; margin-bottom: 20px; overflow: hidden; text-align: center;">
                            <h5 class="title">Áo hoodie thời trang cho mùa đông ấm áp</h5>
                            <p>Khám phá bộ sưu tập áo hoodie với thiết kế mới, đem đến sự thoải mái và ấm áp cho mùa đông này.</p>
                            <img src="~/Content/images/items/@item.Avatar" class="img-fluid" alt="Category Image" style="max-width: 150px; max-height: 150px; height: auto;">
                            <a href="@Url.Action("ProductCategory", "Category", new { id = item.Id })" class="btn btn-outline-primary rounded-pill" style="margin-top: 10px;">Source now</a>
                        </div>
                    }




                </div> <!-- col.// -->
                <div class="col-md-9">
                    <ul class="row no-gutters bordered-cols">
                        @foreach (var item in Model.ListProduct.Where(p => p.CategoryId == 1).Take(8))
                        {
                            <li class="col-6 col-lg-3 col-md-4">
                                <a href="@Url.Action("ProductDetail", "Products", new { id = item.Id })" class="item">
                                    <div class="card-body">
                                        <h6 class="title" style="display: -webkit-box; -webkit-line-clamp: 3; -webkit-box-orient: vertical; overflow: hidden; text-overflow: ellipsis;">
                                            @item.ShortDes
                                        </h6>
                                        <img class="img-sm float-right" src="~/Content/images/items/@item.Avatar">
                                        <p class="text-muted"><i class="fa fa-map-marker-alt"></i>Quận 9, TPHCM</p>
                                    </div>
                                </a>
                            </li>
                        }
                    </ul>
                </div> <!-- col.// -->
            </div> <!-- row.// -->
        </div> <!-- card.// -->
    </section>
    <!-- =============== SECTION 1 END =============== -->
    <!-- =============== SECTION 2 =============== -->
    <section class="padding-bottom">
        <header class="section-heading heading-line">
            <h4 class="title-section text-uppercase">Áo thun</h4>
        </header>

        <div class="card card-home-category">
            <div class="row no-gutters">
                <div class="col-md-3">

                    @foreach (var item in Model.ListCategory.Where(p => p.Id == 2))
                    {
                        <div class="home-category-banner bg-light-orange" style="max-width: 100%; padding: 10px; margin-bottom: 20px; overflow: hidden; text-align: center;">
                            <h5 class="title">Áo thun phong cách, thời trang cho mọi mùa</h5>
                            <p>Khám phá bộ sưu tập áo thun đa dạng, phù hợp với mọi dịp, mang đến sự thoải mái và phong cách cho bạn.</p>
                            <img src="~/Content/images/items/@item.Avatar" class="img-fluid" alt="Category Image" style="max-width: 150px; max-height: 150px; height: auto;">
                            <a href="@Url.Action("ProductCategory", "Category", new { id = item.Id })" class="btn btn-outline-primary rounded-pill" style="margin-top: 10px;">Source now</a>
                        </div>
                    }

                </div> <!-- col.// -->
                <div class="col-md-9">
                    <ul class="row no-gutters bordered-cols">
                        @foreach (var item in Model.ListProduct.Where(p => p.CategoryId == 2).Take(8))
                        {
                            <li class="col-6 col-lg-3 col-md-4">
                                <a href="@Url.Action("ProductDetail", "Products", new { id = item.Id })" class="item">
                                    <div class="card-body">
                                        <h6 class="title" style="display: -webkit-box; -webkit-line-clamp: 3; -webkit-box-orient: vertical; overflow: hidden; text-overflow: ellipsis;">
                                            @item.ShortDes
                                        </h6>
                                        <img class="img-sm float-right" src="~/Content/images/items/@item.Avatar">
                                        <p class="text-muted"><i class="fa fa-map-marker-alt"></i>Quận 9, TPHCM</p>
                                    </div>
                                </a>
                            </li>
                        }
                    </ul>
                </div> <!-- col.// -->
            </div> <!-- row.// -->
        </div> <!-- card.// -->
    </section>
    <!-- =============== SECTION 2 END =============== -->
    <!-- =============== SECTION REQUEST =============== -->

    <section class="padding-bottom">

        <header class="section-heading heading-line">
            <h4 class="title-section text-uppercase">Yêu cầu báo giá</h4>
        </header>

        <div class="row">
            <div class="col-md-8">
                <div class="card-banner banner-quote overlay-gradient" style="background-image: url('~/Content/images/banners/banner9.jpg');">
                    <div class="card-img-overlay white">
                        <h3 class="card-title">Cách đơn giản để gửi yêu cầu đến nhà cung cấp</h3>
                        <p class="card-text" style="max-width: 400px">
                            Chúng tôi cung cấp những sản phẩm thời trang chất lượng cao, mang lại sự thoải mái và phong cách cho bạn. Khám phá ngay những bộ sưu tập mới nhất của chúng tôi!
                        </p>

                        <a href="" class="btn btn-primary rounded-pill">Tìm hiểu thêm</a>
                    </div>
                </div>
            </div> <!-- col // -->
            <div class="col-md-4">

                <div class="card card-body">
                    <h4 class="title py-3">Một yêu cầu, nhiều báo giá</h4>
                    <form>
                        <div class="form-group">
                            <input class="form-control" name="" placeholder="Bạn đang tìm gì?" type="text">
                        </div>
                </div>
                <div class="form-group">
                    <div class="input-group">
                        <input class="form-control" placeholder="Số lượng" name="" type="text">

                        <select class="custom-select form-control">
                            <option>Chiếc</option>
                            <option>Bộ</option>
                            <option>Cặp</option>
                        </select>
                    </div>
                </div>
                <div class="form-group text-muted">
                    <p>Chọn loại mẫu yêu cầu:</p>
                    <label class="form-check form-check-inline">
                        <input class="form-check-input" type="checkbox" value="option1">
                        <div class="form-check-label">Yêu cầu báo giá</div>
                    </label>
                    <label class="form-check form-check-inline">
                        <input class="form-check-input" type="checkbox" value="option2">
                        <div class="form-check-label">Yêu cầu mẫu</div>
                    </label>
                </div>
                <div class="form-group">
                    <button class="btn btn-warning">Gửi yêu cầu báo giá</button>
                </div>
                </form>
            </div>

        </div> <!-- col // -->
</div> <!-- row // -->
    </section>

<!-- =============== SECTION REQUEST .//END =============== -->
<!-- =============== SECTION ITEMS =============== -->
<section class="padding-bottom-sm">

    <header class="section-heading heading-line">
        <h4 class="title-section text-uppercase">Sản phẩm đề xuất</h4>
    </header>

    <div class="row row-sm">
        @foreach (var product in Model.ListProduct.Where(n => n.TypeId == 1).Take(6))
        {
            <div class="col-xl-2 col-lg-3 col-md-4 col-6">
                <div class="card card-sm card-product-grid">
                    <a href="@Url.Action("ProductDetail", "Products", new { id = product.Id })" class="img-wrap">
                        <img src="~/Content/images/items/@product.Avatar" alt="@product.Name">
                    </a>
                    <figcaption class="info-wrap">
                        <a href="@Url.Action("ProductDetail", "Products", new { id = product.Id })" class="title">@product.Name</a>
                        <div class="price mt-1">
                            @string.Format("{0:N0} ₫", product.Price)
                        </div> <!-- price-wrap.// -->

                    </figcaption>
                </div>
            </div> <!-- col.// -->
        }
    </div> <!-- row.// -->
</section>
