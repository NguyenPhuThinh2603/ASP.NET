@model nguyenphuthinh_2122110426.Context.User

@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Đăng ký</h2>

<style>
    /* Định dạng cho toàn bộ form */
    .form-horizontal {
        max-width: 400px;
        margin: 50px auto;
        background: #fff;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

        /* Định dạng tiêu đề */
        .form-horizontal h4 {
            font-size: 22px;
            font-weight: bold;
            margin-bottom: 20px;
            text-align: center;
            color: #333;
        }

    /* Định dạng cho nhãn (label) */
    .control-label {
        font-weight: bold;
        color: #333;
        margin-bottom: 5px;
        display: block;
        font-size: 14px; /* Đảm bảo chữ vừa phải */
    }

    /* Định dạng cho các trường nhập liệu */
    .form-control {
        border: 1px solid #ccc;
        border-radius: 5px;
        padding: 10px;
        font-size: 14px;
        width: 100%; /* Đảm bảo full chiều rộng */
        box-sizing: border-box;
        margin-bottom: 15px; /* Thêm khoảng cách giữa các ô nhập liệu */
    }

        .form-control:focus {
            border-color: #007bff;
            box-shadow: 0 0 5px rgba(0, 123, 255, 0.5);
        }

    /* Định dạng nút submit */
    .btn {
        display: block;
        width: 100%;
        background-color: #ff4500;
        color: #fff;
        padding: 10px;
        border: none;
        border-radius: 5px;
        font-size: 16px;
        font-weight: bold;
        text-transform: uppercase;
        cursor: pointer;
    }

        .btn:hover {
            background-color: #e63900;
        }

    /* Liên kết quay lại */
    div > a {
        text-align: center;
        display: block;
        margin-top: 10px;
        color: #007bff;
        font-size: 14px;
        text-decoration: none;
    }

        div > a:hover {
            color: #0056b3;
        }

    .btn-back {
        display: inline-block; /* Chỉ chiếm đủ kích thước nội dung */
        background-color: #6c757d; /* Màu xám */
        color: #fff;
        padding: 10px 20px; /* Tăng độ rộng nút nhưng không quá lớn */
        border: none;
        border-radius: 5px;
        font-size: 14px;
        font-weight: bold;
        text-transform: uppercase;
        text-decoration: none; /* Loại bỏ gạch chân */
        cursor: pointer;
    }

        .btn-back:hover {
            background-color: #5a6268; /* Màu xám đậm hơn khi hover */
        }

</style>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Người dùng</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            <label class="control-label">Họ</label>
            @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <label class="control-label">Tên</label>
            @Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <label class="control-label">Email</label>
            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", autocomplete = "off" } })
            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <label class="control-label">Mật khẩu</label>
            @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <button type="submit" class="btn">Tạo tài khoản</button>
        </div>
    </div>
}

<div style="text-align: center; margin-top: 15px;">
    @Html.ActionLink("Quay lại danh sách", "Index", null, new { @class = "btn-back" })
</div>